{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "toolName": "vcf_variant_length",
  "serverName": "Parsers",
  "version": "1.0.0",
  "stability": "stable",
  "methodId": "VcfParser.GetVariantLength",
  "docRef": "Seqeron.Genomics/VcfParser.cs#L421",
  "description": "Get the length difference of a variant (absolute difference between ref and alt lengths).",
  "inputSchema": {
    "type": "object",
    "properties": {
      "refAllele": { "type": "string", "description": "Reference allele", "minLength": 1 },
      "altAllele": { "type": "string", "description": "Alternate allele", "minLength": 1 }
    },
    "required": ["refAllele", "altAllele"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "length": { "type": "integer", "description": "Absolute length difference" },
      "refLength": { "type": "integer", "description": "Length of reference allele" },
      "altLength": { "type": "integer", "description": "Length of alternate allele" }
    },
    "required": ["length", "refLength", "altLength"]
  },
  "examples": [
    {
      "name": "Insertion length",
      "input": { "refAllele": "A", "altAllele": "ATGC" },
      "output": { "length": 3, "refLength": 1, "altLength": 4 }
    },
    {
      "name": "SNP zero length",
      "input": { "refAllele": "A", "altAllele": "G" },
      "output": { "length": 0, "refLength": 1, "altLength": 1 }
    }
  ]
}
